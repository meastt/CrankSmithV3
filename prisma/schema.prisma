// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Component {
  id          String   @id @default(uuid())
  type        String // Frame, Wheel, etc.
  name        String
  interfaces  String // JSON string of interface standards
  attributes  String // JSON string of technical specs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String       @id // This will be the Clerk User ID
  email     String       @unique
  builds    SavedBuild[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model SavedBuild {
  id        String   @id @default(cuid())
  name      String
  parts     String   // JSON string of selected parts (component IDs)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
